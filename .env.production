# Variáveis de Ambiente para Produção (Vercel)
# Configure estas variáveis no dashboard do Vercel

# Ambiente
NODE_ENV=production

# Database (Configure com Supabase ou PlanetScale)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"
DIRECT_URL="postgresql://username:password@host:port/database?sslmode=require"

# JWT Secrets (Gere valores seguros)
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Upload Configuration
UPLOAD_MAX_SIZE="10485760"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp"
UPLOAD_DIR="/tmp/uploads/images"
UPLOAD_BASE_URL="https://your-app.vercel.app/uploads/images"

# App Configuration
APP_NAME="Sistema Lanchonete"
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# Disable Telemetry
NEXT_TELEMETRY_DISABLED=1

# Prisma
PRISMA_GENERATE_DATAPROXY=true