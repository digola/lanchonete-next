{
  "info": {
    "name": "Lanchonete - Testes BÃ¡sicos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:3001" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/health", "host": ["{{base_url}}"], "path": ["api", "health"] }
      }
    },
    {
      "name": "Ping GET",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/ping?q=teste",
          "host": ["{{base_url}}"],
          "path": ["api", "ping"],
          "query": [{ "key": "q", "value": "teste" }]
        }
      }
    },
    {
      "name": "Ping POST",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"hello\": \"world\"\n}" },
        "url": { "raw": "{{base_url}}/api/ping", "host": ["{{base_url}}"], "path": ["api", "ping"] }
      }
    },
    {
      "name": "Echo GET",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/echo?x=1&y=2",
          "host": ["{{base_url}}"],
          "path": ["api", "echo"],
          "query": [ {"key": "x", "value": "1"}, {"key": "y", "value": "2"} ]
        }
      }
    },
    {
      "name": "Echo POST (texto)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "text/plain" } ],
        "body": { "mode": "raw", "raw": "Texto livre enviado do Postman" },
        "url": { "raw": "{{base_url}}/api/echo", "host": ["{{base_url}}"], "path": ["api", "echo"] }
      }
    },
    {
      "name": "Mock Login (GET)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.accessToken) {",
              "  pm.collectionVariables.set('token', json.accessToken);",
              "  console.log('Token salvo em collection variable');",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/mock-login", "host": ["{{base_url}}"], "path": ["api", "mock-login"] }
      }
    },
    {
      "name": "Mock Login (POST)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.accessToken) {",
              "  pm.collectionVariables.set('token', json.accessToken);",
              "  console.log('Token salvo em collection variable');",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"admin@example.com\",\n  \"role\": \"ADMIN\"\n}" },
        "url": { "raw": "{{base_url}}/api/mock-login", "host": ["{{base_url}}"], "path": ["api", "mock-login"] }
      }
    },
    {
      "name": "Test Auth (GET)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{base_url}}/api/test-auth", "host": ["{{base_url}}"], "path": ["api", "test-auth"] }
      }
    },
    {
      "name": "Test Auth (POST)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"data\": \"123\"\n}" },
        "url": { "raw": "{{base_url}}/api/test-auth", "host": ["{{base_url}}"], "path": ["api", "test-auth"] }
      }
    }
  ]
}